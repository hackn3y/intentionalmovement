# Backend Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Database Configuration
# Development uses SQLite by default (no configuration needed)
# For PostgreSQL (production), uncomment and configure:
# DATABASE_URL=postgresql://username:password@host:port/database_name
DB_HOST=localhost
DB_PORT=5432
DB_NAME=intentional_movement
DB_USER=postgres
DB_PASSWORD=your_postgres_password

# JWT Authentication
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Firebase Configuration (Optional - for authentication and push notifications)
# Get credentials from: https://console.firebase.google.com
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# File Storage Configuration
# STORAGE_MODE: 'local' for development, 's3' for production
STORAGE_MODE=local
UPLOAD_DIR=uploads

# AWS S3 Configuration (Optional - only needed if STORAGE_MODE=s3)
# Get credentials from: https://console.aws.amazon.com
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Stripe Payment Integration (Required for purchases)
# Get test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Vimeo Video Hosting (Optional)
# Get credentials from: https://developer.vimeo.com
VIMEO_ACCESS_TOKEN=your_vimeo_access_token
VIMEO_CLIENT_ID=your_vimeo_client_id
VIMEO_CLIENT_SECRET=your_vimeo_client_secret

# Firebase Cloud Messaging (Optional - for push notifications)
FCM_SERVER_KEY=your_fcm_server_key

# Email Service Configuration (Optional - for password resets, notifications)
# Option 1: SendGrid (recommended)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yourdomain.com

# Option 2: Mailgun (alternative)
# EMAIL_SERVICE=mailgun
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=your_mailgun_domain

# Analytics (Optional)
# Get token from: https://mixpanel.com
MIXPANEL_TOKEN=your_mixpanel_token

# Mailchimp Newsletter Integration (Optional - auto-subscribe new users)
# Get credentials from: https://mailchimp.com/developer/
# Server Prefix: Found in your Mailchimp account URL (e.g., us1, us2, us19, etc.)
# List ID: Found in Audience > Settings > Audience name and defaults
# API Key: Account > Extras > API keys
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_SERVER_PREFIX=us19
MAILCHIMP_LIST_ID=your_mailchimp_list_id

# Admin Panel Configuration
# Default admin account (change password after first login!)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=ChangeThisPassword123!

# CORS Origins (comma-separated list of allowed origins)
# Add your production domains here
CORS_ORIGIN=http://localhost:3000,http://localhost:8081,http://localhost:8091,http://localhost:8092,http://localhost:19006
