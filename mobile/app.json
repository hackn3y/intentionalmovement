{
  "expo": {
    "name": "Intentional Movement",
    "slug": "intentional-movement",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.intentionalmovement.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to capture photos and videos for your posts.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photo library to upload images and videos.",
        "NSMicrophoneUsageDescription": "This app uses the microphone to record videos."
      },
      "usesAppleSignIn": true
    },
    "android": {
      "package": "com.intentionalmovement.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "navigationBar": {
        "backgroundColor": "#1a1a1a"
      }
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png",
      "name": "Intentional Movement",
      "shortName": "IM",
      "lang": "en",
      "scope": "/",
      "themeColor": "#ec4899",
      "backgroundColor": "#fdf2f8",
      "display": "standalone",
      "orientation": "portrait",
      "dir": "ltr",
      "preferRelatedApplications": false,
      "description": "Planted Mind, Moving Body - Transform your lifestyle through intentional movement and mindful living",
      "startUrl": "/",
      "splash": {
        "backgroundColor": "#fdf2f8",
        "resizeMode": "contain",
        "image": "./assets/splash.png"
      },
      "config": {
        "firebase": {
          "measurementId": ""
        }
      }
    },
    "sdkVersion": "54.0.0",
    "extra": {
      "eas": {
        "projectId": "intentional-movement-corp"
      },
      "googleWebClientId": "528044070931-06pbpg4gj40daopug4b7plumibn3g353.apps.googleusercontent.com"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ec4899"
        }
      ]
    ],
    "scheme": "intentionalmovement"
  }
}
